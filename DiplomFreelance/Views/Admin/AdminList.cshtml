@model IEnumerable<DiplomFreelance.Models.ApplicationUser>

@{
    ViewBag.Title = "AdminList";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-8">
            <h2>Список пользователей с ролью Администратор</h2>
            <h5>Для переназначения обратно в роль заказчика, нажмите Удалить у нужного администратора</h5>

            <table class="table">
                <tr>
                    <th>
                        Почта
                    </th>
                    <th>
                        Имя
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @if (item.UserName == User.Identity.Name)
                            {
                                <div>Это вы</div>
                            }
                            else if (item.Email == "admin@admin.com")
                            {
                                <div>Этого администратора нельзя удалить</div>
                            }
                            else
                            {
                                <div>@Html.ActionLink("Удалить", "RemoveFromRoleAdmin", new { idAdmin = item.Id })</div>
                            }

                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
