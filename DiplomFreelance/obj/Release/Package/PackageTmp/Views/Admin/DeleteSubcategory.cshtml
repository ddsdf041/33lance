@model DiplomFreelance.Models.FreelanceModels.ViewModel.SubcategoryViewModel

@{
    ViewBag.Title = "DeleteSubcategory";
}

<div class="container mt-5 ">
    <div class="row">
        <div class="col-6">
            <h3>Вы уверены, что хотите удалить эту подкатегорию?</h3>
            <div>
                <h5 class="text-muted">Категория: @Model.Category.Name</h5>
                <h6 class="text-muted">Удаление произойдет только в том случае, если к данной подкатегории не привязаны услуги или заказы</h6>
                <hr />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.HiddenFor(model => model.Category.ID)
                    @Html.HiddenFor(model => model.ID)
                    <dl class="dl-horizontal">
                        <dt>
                            Наименование
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                    </dl>


                    <div class="form-actions no-color">
                        <input type="submit" value="Удалить" class="btn btn-danger" />  |
                        @Html.ActionLink("Назад", "SubcategoryView", new { id = Model.Category.ID }, new { @class = "btn btn-outline-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>